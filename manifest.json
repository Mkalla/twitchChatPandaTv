{
    "manifest_version": 2,

    "name": "Twitch Chat on Panda.tv",
    "description": "This chrome extension replaces Arteezys panda.tv chat with his twitch chat. Removes all the unnecessary stuff as well.",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png"
    },
    "permissions": [
        "http://www.panda.tv/*",
        "https://www.panda.tv/*"
    ],
    "content_scripts": [{
        "matches": ["http://www.panda.tv/3332", "https://www.panda.tv/3332"],
        "js": ["replace.js"],
        "run_at": "document_start"
    }],
    "web_accessible_resources": [
        "biersderp.png"
    ]
}
